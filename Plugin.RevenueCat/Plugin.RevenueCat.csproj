<!--    </ItemGroup>-->

    <ItemGroup Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">

        <PackageReference Include="Dev.Drewhamilton.Poko.PokoAnnotations" Version="0.15.2" />
        <PackageReference Include="Org.Jetbrains.Kotlinx.KotlinxSerializationJson" Version="1.7.3" />
        <PackageReference Include="Xamarin.Android.Google.BillingClient" Version="7.1.1.2" />
        <PackageReference Include="Xamarin.GooglePlayServices.Ads.Identifier" Version="117.0.1.5" />
        <PackageReference Include="Xamarin.Kotlin.Parcelize.Runtime" Version="1.9.23.3" />


